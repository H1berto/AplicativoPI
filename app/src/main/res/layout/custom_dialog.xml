
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_button_home">

        <TextView
            android:gravity="center"
            android:background="#fff"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Você não vai ser informado sobre:"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="24sp"/>
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apresentação PI"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"/>

        <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor:"
        android:textStyle="bold"
        android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnSimDialog"
            android:textColor="#fff"
            android:textStyle="italic"
            android:background="@drawable/shape_sim"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="SIM" />

        <Button
            android:id="@+id/btnNopeDialog"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/shape_nao"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="NÃO" />

    </LinearLayout>


</LinearLayout>