<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rickt.fam.VerAtividadesActivity"
    android:padding="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:padding="8dp"
            android:background="@drawable/shape_button_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11 de junho de 2018"
            android:textSize="22dp"
            android:textColor="@color/colorText_icons"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apresentação trabalho de PI\nProfºCID"
            android:textSize="22dp"
            android:textColor="#000"
            android:textStyle="bold"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vale:"
            android:textSize="22dp"
            android:textColor="#000"
            android:textStyle="bold"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.0"
            android:textSize="22dp"
            android:textColor="#0de614"
            android:textStyle="bold"/>

        <TextView
            android:padding="8dp"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Existe uma apresentação para este dia,\ndeseja receber uma notificação dias antes ?"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSim"
            android:background="@drawable/shape_sim"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="SIM"
            android:textSize="20dp"
            android:textColor="@color/colorText_icons"/>

        <Button
            android:text="NÃO"
            android:textSize="20dp"
            android:textColor="@color/colorText_icons"
            android:id="@+id/btnNao"
            android:background="@drawable/shape_nao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>
