<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rickt.fam.TurmasActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <Button
                android:id="@+id/btnTurma1"
                android:elevation="8dp"
                android:textSize="16dp"
                android:textColor="#fff"
                android:background="@drawable/shape_button_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Turma cc - 3° semestre\n(manhã)"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btnTurma2"
                android:elevation="8dp"
                android:textSize="16dp"
                android:textColor="#fff"
                android:background="@drawable/shape_button_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Turma ads - 3° semestre\n(manhã)"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnTurma3"
            android:elevation="8dp"
            android:textSize="16dp"
            android:textColor="#fff"
            android:background="@drawable/shape_button_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turma cc - 2° semestre\n(manhã)"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>




    </LinearLayout>

</LinearLayout>
